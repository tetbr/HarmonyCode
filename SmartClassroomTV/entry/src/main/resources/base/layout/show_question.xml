<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:id="$+id:root_layout"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   ohos:margin="0"
                   ohos:padding="0vp"
                   ohos:background_element="#efefef"
                   ohos:orientation="vertical">

    <DependentLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:margin="0vp"
            ohos:padding="5vp"
            ohos:background_element="blue"
            >

        <Text
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:text="智慧课堂"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:text_size="50"
                ohos:id="$+id:title"
                ohos:text_color="white"/>
        <Text
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:align_parent_left="true"
                ohos:left_margin="100vp"
                ohos:text="00:00"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:text_size="50"
                ohos:id="$+id:t_timer"
                ohos:text_color="white"/>

        <Button
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:text="返回"
                ohos:padding="5vp"
                ohos:text_alignment="center"
                ohos:background_element="blue"
                ohos:id="$+id:btn_exit"
                ohos:align_parent_left="true"
                ohos:text_size="50"
                ohos:text_color="white"/>

        <DirectionalLayout
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_parent_top="true"
                ohos:align_parent_right="right "
                ohos:orientation="horizontal"
                ohos:background_element="blue"
                >
            <Button
                    ohos:id="$+id:btn_start"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text="开始"
                    ohos:padding="5vp"
                    ohos:right_margin="10vp"
                    ohos:text_alignment="center"
                    ohos:text_size="50"
                    ohos:text_color="white"/>
            <Button
                    ohos:id="$+id:btn_stop"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text="结束"
                    ohos:padding="5vp"
                    ohos:right_margin="10vp"
                    ohos:text_alignment="center"
                    ohos:text_size="50"
                    ohos:text_color="white"/>
            <Button
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text="报告"
                    ohos:padding="5vp"
                    ohos:right_margin="10vp"
                    ohos:text_alignment="center"
                    ohos:id="$+id:btn_report"
                    ohos:text_size="50"
                    ohos:text_color="white"/>
        </DirectionalLayout>



    </DependentLayout>
    <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text="还没有便签哦！赶快添加吧"
            ohos:text_alignment="vertical_center"
            ohos:text_color="black"
            ohos:text_size="40fp"
            ohos:padding="10vp"
            ohos:background_element="white"
            ohos:multiple_lines="true"
            ohos:id="$+id:t_content"/>
    <ListContainer
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:margin="5vp"

            ohos:id="$+id:list_container">


    </ListContainer>

    <DependentLayout
            ohos:width="match_parent"
            ohos:background_element="white"
            ohos:margin="5vp"
            ohos:height="match_parent">

        <Text
                ohos:width="match_parent"
                ohos:height="match_parent"
                ohos:text="还没有便签哦！赶快添加吧"
                ohos:text_alignment="center"
                ohos:text_color="#e0e0e0"
                ohos:text_size="70fp"
                ohos:center_in_parent="true"
                ohos:id="$+id:i_notice"/>
    </DependentLayout>
</DirectionalLayout>